<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/root_text1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="a1:"
        android:textSize="60dp"
        />
    <EditText
        android:id="@+id/root_textinput1"
        android:layout_toRightOf="@+id/root_text1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/root_text2"
        android:layout_below="@+id/root_text1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="a2:"
        android:textSize="60dp"
        />
    <EditText
        android:id="@+id/root_textinput2"
        android:layout_toRightOf="@+id/root_text2"
        android:layout_below="@+id/root_text1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/root_text3"
        android:layout_below="@+id/root_text2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="a3:"
        android:textSize="60dp"
        />
    <EditText
        android:id="@+id/root_textinput3"
        android:layout_toRightOf="@+id/root_text2"
        android:layout_below="@+id/root_text2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/root_but1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/button_get_root"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/root_text3"
        />
    <TextView
        android:id="@+id/normal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Final roots are"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/root_but1"
        />
    <ListView
        android:id="@+id/root_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/normal_text"
        />
</RelativeLayout>
